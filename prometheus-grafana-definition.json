{
  "family": "prometheus-grafana-definition",
  "taskRoleArn": "arn:aws:iam::247988977671:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "prometheus",
      "image": "prom/prometheus:v2.37.9",
      "user": "655:655",
      "cpu": 512,
      "memory": 512,
      "memoryReservation": 256,
      "portMappings": [
        {
          "containerPort": 9090,
          "hostPort": 9090,
          "protocol": "tcp"
        }
      ],
      "command": [
        "--config.file=/.prometheus-config/prometheus.yml",
        "--storage.tsdb.path=/.prometheus-data",
        "--web.console.libraries=/.prometheus-config/console_libraries",
        "--web.console.templates=/.prometheus-config/consoles",
        "--storage.tsdb.retention.time=200h",
        "--web.enable-lifecycle"
      ],
      "mountPoints": [
        {
          "sourceVolume": "prometheus_data",
          "containerPath": "/.prometheus-data"
        },
        {
          "sourceVolume": "prometheus_config",
          "containerPath": "/.prometheus-config"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/prometheus",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "grafana",
      "image": "grafana/grafana-oss:latest",
      "user": "656:656",
      "cpu": 256,
      "memory": 256,
      "memoryReservation": 128,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "grafana_data",
          "containerPath": "/var/lib/grafana"
        },
        {
          "sourceVolume": "grafana_config",
          "containerPath": "/etc/grafana"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/grafana",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "volumes": [
    {
      "name": "prometheus_data",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b382f88beed3111c",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-05ccf1a675b937bb2",
          "iam": "ENABLED"
        }
      }
    },
    {
      "name": "prometheus_config",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b382f88beed3111c",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-08fd12728c2dfc58b",
          "iam": "ENABLED"
        }
      }
    },
    {
      "name": "grafana_data",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b382f88beed3111c",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-0944fc9e03a4b8e53",
          "iam": "ENABLED"
        }
      }
    },
    {
      "name": "grafana_config",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b382f88beed3111c",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-00bd5e71fa95244ca",
          "iam": "ENABLED"
        }
      }
    }
  ],
  "requiresCompatibilities": ["EC2"],
  "cpu": "768",
  "memory": "576"
}

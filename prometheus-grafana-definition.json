{
  "family": "prometheus-grafana-definition",
  "taskRoleArn": "arn:aws:iam::247988977671:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "init-container",
      "image": "alpine:latest",
      "cpu": 64,
      "memory": 128,
      "memoryReservation": 64,
      "essential": false,
      "command": [
        "wget",
        "https://raw.githubusercontent.com/JustAzul/ecs-monitoring-with-prometheus-grafana/master/prometheus.yml",
        "-P",
        "/mnt"
      ],
      "mountPoints": [
        {
          "sourceVolume": "prometheus_config",
          "containerPath": "/mnt"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/prometheus-grafana",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "prometheus",
      "image": "prom/prometheus:v2.4.0",
      "cpu": 512,
      "memory": 512,
      "memoryReservation": 256,
      "portMappings": [
        {
          "containerPort": 9090,
          "hostPort": 9090,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "mountPoints": [
        {
          "sourceVolume": "prometheus_config",
          "containerPath": "/etc/prometheus"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/prometheus-grafana",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "dependsOn": [
        {
          "containerName": "init-container",
          "condition": "COMPLETE"
        }
      ]
    },
    {
      "name": "grafana",
      "image": "grafana/grafana",
      "cpu": 256,
      "memory": 256,
      "memoryReservation": 128,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/prometheus-grafana",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "volumes": [
    {
      "name": "prometheus_config",
      "dockerVolumeConfiguration": {
        "scope": "task",
        "driver": "local"
      }
    }
  ],

  "requiresCompatibilities": ["EC2"],
  "cpu": "832",
  "memory": "512"
}

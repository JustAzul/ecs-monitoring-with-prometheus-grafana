{
  "family": "prometheus-grafana-definition",
  "taskRoleArn": "arn:aws:iam::247988977671:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "init-container",
      "image": "alpine:latest",
      "cpu": 64,
      "memory": 128,
      "memoryReservation": 64,
      "essential": false,
      "command": [
        "wget",
        "-O",
        "/tmp/prometheus.yml",
        "https://raw.githubusercontent.com/JustAzul/ecs-monitoring-with-prometheus-grafana/master/prometheus.yml"
      ],
      "mountPoints": [
        {
          "sourceVolume": "temp_volume",
          "containerPath": "/tmp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/prometheus-grafana",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "prometheus",
      "image": "prom/prometheus:v2.37.9",
      "user": "655:655",
      "cpu": 512,
      "memory": 512,
      "memoryReservation": 256,
      "portMappings": [
        {
          "containerPort": 9090,
          "hostPort": 9090,
          "protocol": "tcp"
        }
      ],
      "command": [
        "--config.file=/tmp/prometheus.yml",
        "--storage.tsdb.path=/mnt/efs/data",
        "--web.console.libraries=/.prometheus-config/console_libraries",
        "--web.console.templates=/.prometheus-config/consoles",
        "--storage.tsdb.retention.time=200h",
        "--web.enable-lifecycle"
      ],
      "mountPoints": [
        {
          "sourceVolume": "temp_volume",
          "containerPath": "/tmp"
        },
        {
          "sourceVolume": "prometheus_data",
          "containerPath": "/prometheus"
        },{
          "sourceVolume": "prometheus_config",
          "containerPath": "/.prometheus-config"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/prometheus-grafana",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "dependsOn": [
        {
          "containerName": "init-container",
          "condition": "COMPLETE"
        }
      ]
    },
    {
      "name": "grafana",
      "image": "grafana/grafana-oss:latest",
      "user": "655:655",
      "cpu": 256,
      "memory": 256,
      "memoryReservation": 128,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "grafana_data",
          "containerPath": "/var/lib/grafana"
        },
        {
          "sourceVolume": "grafana_provisioning",
          "containerPath": "/etc/grafana/provisioning"
        },
        {
          "sourceVolume": "grafana_ini",
          "containerPath": "/etc/grafana/grafana.ini",
          "readOnly": true
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/prometheus-grafana",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "volumes": [
    {
      "name": "temp_volume",
      "host": {}
    },
    {
      "name": "prometheus_data",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b382f88beed3111c",
        "transitEncryption": "ENABLED",
        "rootDirectory": "/data"      }
    },
    {
      "name": "prometheus_config",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b382f88beed3111c",
        "transitEncryption": "ENABLED",
        "rootDirectory": "/config"      }
    },
    {
      "name": "grafana_data",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b382f88beed3111c",
        "transitEncryption": "ENABLED",
        "rootDirectory": "/grafana"      }
    },
    {
      "name": "grafana_provisioning",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b382f88beed3111c",
        "transitEncryption": "ENABLED",
        "rootDirectory": "/grafana/provisioning"      }
    },
    {
      "name": "grafana_ini",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0b382f88beed3111c",
        "transitEncryption": "ENABLED",
        "rootDirectory": "/grafana/config/grafana.ini"      }
    }
  ],
  "requiresCompatibilities": ["EC2"],
  "cpu": "832",
  "memory": "512"
}
